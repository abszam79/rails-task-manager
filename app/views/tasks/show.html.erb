<div class="container">
  <div class="row">
    <h2><%= @task.title %></h2>
    <div class="details">
      <p><%= @task.details %></p>
    </div>
    <div class="completed">
      <% if @task.completed %>
        <i class="fa fa-check-square" aria-hidden="true"></i>
        <p>This task is completed</p>
      <% else %>
        <i class="fa fa-square-o" aria-hidden="true"></i>
        <p>This task is not completed yet</p>
      <% end %>
    </div>

    <%= link_to "Back to list", tasks_path %>
<br />
    <%= link_to "Edit", edit_task_path %>
  </div>
</div>
